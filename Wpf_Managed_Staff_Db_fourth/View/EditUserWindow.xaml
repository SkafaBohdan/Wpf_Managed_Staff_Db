<Window x:Class="Wpf_Managed_Staff_Db_fourth.View.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Managed_Staff_Db_fourth.View"
        mc:Ignorable="d"
      Title="EditNewUserWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="200">
            <TextBlock Text="Name"/>
            <TextBox Name="" />
            <TextBlock Text="SurName"/>
            <TextBox Name="1" />
            <TextBlock Text="Phone"/>
            <TextBox Name="2" />
            <TextBlock Text="Max of vacancies"/>
            <TextBox Name="3" />
            <TextBlock Text="Position"/>
            <ComboBox />
        </StackPanel>
        <Button Grid.Row ="1" Content="Edit user(staff)"/>
    </Grid>
</Window>

